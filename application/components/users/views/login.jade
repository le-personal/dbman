extends /layout-minimum

block scripts
	script(src="/vendor/requirejs/require.js", data-main="/js/users/main")

block content
	div#login
		div#floater
		div.container#loginForm
			div.row
				div.col-lg-4.col-md-4.col-sm-10.col-xs-10.col-lg-offset-4.col-md-offset-4.col-sm-offset-1.col-xs-offset-1
					div
						div.well
							h3!= title
							hr
							form(role="form", method="post", action="/login")
								div.form-group
									label(for="username") Email
									input(type="text", name="username", id="form-input-username", placeholder="Enter your email or username").form-control
								div.form-group
									label(for="password") Password
									input(type="password", name="password", id="form-input-password", placeholder="Enter your password").form-control
								div.form-group
									button(type="submit", id="form-login-button").btn.btn-primary Log in