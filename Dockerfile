FROM luis/nodejs

ENV MONGODB_DATABASE dbman
ENV SECRET secretkey
ENV MONGODB_PORT_27017_TCP_ADDR localhost
ENV MONGODB_PORT_27017_TCP_PORT 27017
ENV REDIS_PORT_6379_TCP_ADDR localhost
ENV REDIS_PORT_6379_TCP_PORT 6379
ENV PORT 3000
ENV NODE_ENV production

EXPOSE 3000

ADD ./application /var/www


