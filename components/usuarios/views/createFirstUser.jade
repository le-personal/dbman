extends /layout

block content
  div.container
    div.row
      div.col-lg-6.col-md-6.col-sm-10.col-xs-10.col-lg-offset-3.col-md-offset-3.col-sm-offset-2.col-xs-offset-2
        div.well
          h3!= title
          hr
          include /messages
          form(role="form", method="post", action="/create-first-user")
            div.form-group
              label(for="fullname") Full Name *
              input(type="text", name="fullname", id="form-input-fullname", placeholder="Enter your full name").form-control
            div.form-group
              label(for="username") Username *
              input(type="text", name="username", id="form-input-username", placeholder="Enter a username").form-control
            div.form-group 
              label(for="email") Email *
              input(type="text", name="email", id="form-input-email", placeholder="Enter your email or email").form-control
            div.form-group
              label(for="password") Password *
              input(type="password", name="password", id="form-input-password", placeholder="Enter your password").form-control
            div.form-group
              label(for="password2") Confirm Password *
              input(type="password", name="password2", id="form-input-password", placeholder="Confirm your password").form-control
            div.form-group
              button(type="submit", id="form-login-button").btn.btn-primary Log in