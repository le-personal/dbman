extends /layout

block content
	div.container
		div.row
			div.col-lg-6.col-md-6.col-sm-10.col-xs-10.col-lg-offset-3.col-md-offset-3.col-sm-offset-2.col-xs-offset-2
				div.well
					h3!= title
					hr
					form(role="form", method="post", action="/login")
						div.form-group
							label(for="username") Email
							input(type="username", name="username", id="form-input-username", placeholder="Enter your email or username").form-control
						div.form-group
							label(for="password") Password
							input(type="password", name="password", id="form-input-password", placeholder="Enter your password").form-control
						div.form-group
							button(type="submit", id="form-login-button").btn.btn-primary Log in