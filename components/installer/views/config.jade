extends /layout

block content
  div.container
    div.row
      div.col-lg-6.col-md-6.col-sm-10.col-xs-10.col-lg-offset-3.col-md-offset-3.col-sm-offset-2.col-xs-offset-2
        div.well
          h3!= title
          hr
          include /messages
          div.alert.alert-info
            p Welcome to the installer of DBManager, to install fill in the form below and click continue.
          form(role="form", method="post", action="/install/config")
            div.form-group
              label(for="secretkey") Secret Key
              input(type="text", name="secretkey", id="form-input-secretkey", placeholder="Eg. oypkj27hawt099emkj2657ckijiqkgqazppljospalghq").form-control
              div.help-block Enter a long string to safetly encrypt passwords and sessions
            div.form-group
              label(for="directoryUploads") Directory to save files *
              input(type="text", name="directoryUploads", id="form-input-directoryUploads", placeholder="/var/files").form-control
              div.help-block Enter a path to save uploads, the user running the application must have read and write access to this directory. Eg. /var/files
            div.form-group 
              label(for="mongodburi") MongoDB URI *
              input(type="text", name="mongodburi", id="form-input-mongodburi", placeholder="Enter your the mongodburi", value="mongodb://").form-control
              div.help-block Enter the mongodb uri in the form of 'mongodb://host/database'
            div.form-group
              button(type="submit", id="form-login-button").btn.btn-primary Continue



